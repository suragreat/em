<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{HH:mm:ss.SSS} [%thread] [%X{sid}] %level %logger{10} [%line]-%msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/opt/logs/em/service.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/opt/logs/em/service.log.%d{yyyy-MM-dd}
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%date{HH:mm:ss.SSS} [%thread] [%X{sid}] %level %logger{10} [%line]-%msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<logger name="com.shengpay.mas">
		<level value="INFO" />
	</logger>

	<logger name="com.shengpay.sars">
		<level value="WARN" />
	</logger>

	<logger name="com.snda.cache">
		<level value="WARN" />
	</logger>

	<logger name="org.springframework">
		<level value="WARN" />
	</logger>

	<logger name="org.apache.ibatis">
		<level value="WARN" />
	</logger>

	<logger name="java.sql">
		<level value="WARN" />
	</logger>

	<logger name="net.rubyeye.xmemcached">
		<level value="ERROR" />
	</logger>
	<logger name="com.google.code.yanf4j">
		<level value="ERROR" />
	</logger>
	<logger name="org.apache.commons">
		<level value="ERROR" />
	</logger>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>

</configuration>
